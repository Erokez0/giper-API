{
    "include": ["./src", "node_modules"],
    "compilerOptions": {
      "module": "commonjs",
      "target": "ES2020",
      "noImplicitAny": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "sourceMap": true,
      "baseUrl": "./src",
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "outDir": "./dist",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "moduleResolution": "node",
      "skipLibCheck": true
    },
}